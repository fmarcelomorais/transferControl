<main>
    <div class="login">
        <h2>Cadastro de Usuario</h2>
        <form method="POST" action="/usuario/add">
            <div class="form-group">
                <label for="inputNome">Seu Nome</label>
                <input type="text" class="form-control" id="inputNome" aria-describedby="emailHelp"
                    placeholder="Seu nome" name="nome">
            </div>
            <div class="form-group">
                <label for="inputEmail">Endereço de email</label>
                <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp"
                    placeholder="Seu email" name="email">
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label for="">Tipo</label>
                    <select class="custom-select" name="tipo" id="tipo">
                        <option selected>Selecione</option>
                        <option value="admin">Administração</option>
                        <option value="aluno">Aluno</option>
                    </select>
                </div>
                <div class="form-group">
                <label for="inputMatricula">Matricula</label>
                <input type="text" class="form-control" id="matrcula" aria-describedby="emailHelp"
                    placeholder="Sua matricula" name="matricula">
            </div>
            </div>
            <div class="form-group">
                <label for="inputSenha">Senha</label>
                <input type="password" class="form-control" id="inputSenha" placeholder="Senha" name="senha">
            </div>
        <button type="submit" class="btn btn-primary" >Cadastrar</button>
          <a href="/admin" type="submit" class="btn btn-warning">Cancelar</a>
        </form>
    </div>
</main>
