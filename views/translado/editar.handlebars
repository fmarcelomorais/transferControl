<main>
    <div class="login">
        <h2>Editar Translado de Aluno</h2>
        <form method="POST" action="/translado/edite">
            <div class="form-group">
                <label for="inputNome">Data Desejada</label>
                <input type="date" class="form-control" id="inputNome" aria-describedby="emailHelp" placeholder="Marca"
                    name="data" required>
            </div>
            <div class="form-group">
                <label for="inputEmail">Turno</label>
                <select class="form-control" name="turno" id="turno" required>
                    <option selected>Selecione</option>
                    <option>Manh√£</option>
                    <option>Tarde</option>
                    <option>Noite</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputEmail">Veiculo</label>
                <select class="form-control" name="placa" id="placa" required>
                    <option selected>Selecione</option>
                    {{#each veiculo}}
                    {{#if this.lotado}}
                    <option disabled>{{this.modelo}} - Lotado</option>
                    {{else}}
                    <option value="{{this.placa}}">{{this.modelo}}</option>
                    {{/if}}
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="inputEmail">Destino</label>
                <select class="form-control" name="destino" id="destino" required>
                    <option selected>Selecione</option>
                    {{#each destino}}
                    <option>{{this.nome}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="inputNome">Matricula</label>
                <input type="number" class="form-control" id="inputNome" aria-describedby="emailHelp"
                    placeholder="Matricula" name="matricula" value="{{translados.matricula}}" readonly>
            </div>
            <button type="submit" class="btn btn-primary">Editar</button>
            <a href="/translado" type="submit" class="btn btn-warning">Cancelar</a>
    </div>

    </form>
    </div>
</main>