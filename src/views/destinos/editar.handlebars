<main>
    <div class="login">
        <h2>Editar de Destino - {{destino.sigla}}</h2>
        <form method="POST" action="/destino/editar">
        <input type="hidden" name="id" value="{{destino.id}}">
            <div class="form-group">
                <label for="inputNome">Nome</label>
                <input type="text" class="form-control" id="inputNome" aria-describedby="emailHelp"
                    placeholder="Marca" name="nome" value="{{destino.nome}}">
            </div>
            <div class="form-group">
                <label for="inputEmail">Sigla</label>
                <input type="text" class="form-control" id="inputEmail" aria-describedby="emailHelp"
                    placeholder="Modelo" name="sigla" value="{{destino.sigla}}">
            </div>
        <button type="submit" class="btn btn-primary" >Editar</button>
          <a href="/admin" type="submit" class="btn btn-warning">Cancelar</a>
            </div>
            
        </form>
    </div>
</main>
