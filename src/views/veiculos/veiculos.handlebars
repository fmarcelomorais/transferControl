<div class="container">
   <a href="veiculo/adicionar">Cadastrar</a> |
    <a href="/admin">Voltar</a>
    <hr>
    <h2>Veiculos Cadastrados</h2>
    <div class="linha"></div>
    <br>
    <div class="dados">

        {{#each veiculo}}
        <div class="usuarios">
            <h3>{{this.modelo}}</h3>
            <div class="linha"></div>                            
              <strong>Marca:</strong> {{this.marca}}
               <strong>Placa:</strong> {{#formatPlaca placa}}{{/formatPlaca}}
                {{#if this.lotado}}
               Não há vagas
                {{else}}
               <strong>Lugares:</strong> {{this.lotacao}}
                {{/if}}
              <strong>Descrição:</strong>{{this.descricao}}
            <div class="linha2"></div>
            <div class="action">
                <form action="/veiculo/delete/{{this.placa}}" method="post">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
                <form action="/veiculo/editar/{{this.placa}}">
                    <button type="submit" class="btn btn-warning">Editar</button>
                </form>
            </div>
            <hr>
        </div>
        {{/each}}
    </div>

</div>
